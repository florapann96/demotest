<%- include('../_layouts/adminheader'); -%>
<h2 class="page-title">Books</h2>
<a href="/admin/products/add-product" class="btn btn-primary">Add a new Book</a>
<br><br>


<table class="table table-striped alignmiddle">
    <thead>
        <tr class="home">
            <th>Book Title</th>
            <th>Category</th>
            <th>Book Image</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>

        <% products.forEach(function(product){ %>
        <tr>
            <td><%= product.title %></td>
            <td><%= product.category %></td>
            <td>
                <% if (product.image == "") { %>
                <img id="noimage" src="/images/noimage.png">
                <% } else {%>
              
              <img id="noimage" src="/product_images/<%= product._id %>/<%= product.image %>">
             
             <!--<p>Open a PDF file <a href="https://docs.google.com/viewer?url=https://github.com/florapann96/demotest/raw/main/public/product_images/<%= product._id %>/<%= product.pdf %>">example</a>. -->
             <p>Open a PDF file <a href="/product_images/<%= product._id %>/<%= product.pdf %>">example</a>.

                <% }%>
            </td>
            <td><a href="/admin/products/edit-product/<%= product._id %>">Edit</a></td>
            <td><a class="confirmDeletion" href="/admin/products/delete-product/<%= product._id %>">Delete</a></td>
        </tr>
        <% }); %>
    </tbody>
</table>

<%- include('../_layouts/adminfooter'); -%>